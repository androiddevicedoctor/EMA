<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_primary"
    tools:context=".navigation.TaskList_frg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        tools:ignore="RtlHardcoded">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            android:background="@color/blue_primary">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/yellow_primary">

                <TextView
                    android:id="@+id/employee_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="210dp"
                    android:text="Emp Id: 123456"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry,SpUsage" />

                <TextView
                    android:id="@+id/employee_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="230dp"
                    android:text="Employee Name"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/employee_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/admin_employee" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="353dp"
                android:text="Task Title"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

            <TextView
                android:id="@+id/task_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView53"
                android:layout_alignStart="@+id/textView53"
                android:layout_alignLeft="@+id/textView53"
                android:layout_alignEnd="@+id/textView53"
                android:layout_alignRight="@+id/textView53"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:text="Write a task"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_blue2"
                android:textSize="14dp"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

            <TextView
                android:id="@+id/textView56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_title"
                android:layout_alignStart="@+id/task_title"
                android:layout_alignLeft="@+id/task_title"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:text="Task description"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

            <TextView
                android:id="@+id/textView57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView56"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView56"
                android:layout_toRightOf="@+id/textView56"
                android:textColor="@color/light_blue2"
                android:text=""
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView56"
                android:layout_alignStart="@+id/textView53"
                android:layout_alignLeft="@+id/textView53"
                android:layout_alignEnd="@+id/textView53"
                android:layout_alignRight="@+id/textView53"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:gravity="center_vertical|top"
                android:text="Write description"
                android:lines="10"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/light_blue2"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

            <TextView
                android:id="@+id/textView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="353dp"
                android:text="Date of assign task"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

            <TextView
                android:id="@+id/date_of_assign_task"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView01"
                android:layout_alignStart="@+id/textView01"
                android:layout_alignLeft="@+id/textView01"
                android:layout_alignEnd="@+id/textView01"
                android:layout_alignRight="@+id/textView01"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:text="DD/MM/YYYY"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/light_blue2"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

            <TextView
                android:id="@+id/textView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_of_assign_task"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="353dp"
                android:text="Date of complete task"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

            <TextView
                android:id="@+id/date_of_complete_task"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView02"
                android:layout_alignStart="@+id/textView02"
                android:layout_alignLeft="@+id/textView02"
                android:layout_alignEnd="@+id/textView02"
                android:layout_alignRight="@+id/textView02"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:text="DD/MM/YYYY"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/light_blue2"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>