<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_primary"
    tools:context=".navigation.Calender_frg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/attendance"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Attendance"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/attendance"
                android:layout_alignEnd="@+id/attendance"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="05dp"
                android:layout_marginEnd="0dp"
                android:background="@color/yellow_primary" />

            <TextView
                android:id="@+id/in_time"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/view1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:elevation="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:text="IN TIME"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/out_time"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/in_time"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:elevation="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:text="OUT TIME"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/out_of_ofice"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/out_time"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:elevation="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:text="OUT OF OFFICE"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/on_leave"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/out_of_ofice"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:elevation="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:text="ON LEAVE"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:visibility="visible"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>