<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_primary"
    tools:context=".navigation.Home_frg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_primary"
            android:paddingBottom="100dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/yellow_primary">

                <TextView
                    android:id="@+id/employee_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180dp"
                    android:text="Emp Id: 123456"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/employee_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="200dp"
                    android:text="Employee Name"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/employee_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/admin_employee" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="353dp"
                android:text="Personal Details"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:elevation="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView53"
                android:layout_alignLeft="@+id/textView53"
                android:layout_alignTop="@+id/designation_text"
                android:layout_alignBottom="@+id/designation_text"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="Designation"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/designation_text"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView53"
                android:layout_alignEnd="@+id/textView53"
                android:layout_alignRight="@+id/textView53"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="UX / UI"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/designation"
                android:layout_alignLeft="@+id/designation"
                android:layout_alignTop="@+id/department_text"
                android:layout_alignBottom="@+id/department_text"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="Department"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/department_text"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/designation"
                android:layout_alignEnd="@+id/textView53"
                android:layout_alignRight="@+id/textView53"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Design"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/designation"
                android:layout_alignLeft="@+id/designation"
                android:layout_alignTop="@+id/dob_text"
                android:layout_alignBottom="@+id/dob_text"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="Date of birth"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dob_text"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/department"
                android:layout_alignEnd="@+id/textView53"
                android:layout_alignRight="@+id/textView53"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="17-8-1977"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/designation"
                android:layout_alignLeft="@+id/designation"
                android:layout_alignTop="@+id/mobile_no_text"
                android:layout_alignBottom="@+id/mobile_no_text"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="Phone numer"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobile_no_text"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dob"
                android:layout_alignEnd="@+id/textView53"
                android:layout_alignRight="@+id/textView53"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="+91 8003033082"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/designation"
                android:layout_alignLeft="@+id/designation"
                android:layout_alignTop="@+id/email_text"
                android:layout_alignBottom="@+id/email_text"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="Email address"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile_no"
                android:layout_alignEnd="@+id/textView53"
                android:layout_alignRight="@+id/textView53"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="oshrink@gmail.com"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Joining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/designation"
                android:layout_alignLeft="@+id/designation"
                android:layout_alignTop="@+id/Joining_text"
                android:layout_alignBottom="@+id/Joining_text"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="Date of joining"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Joining_text"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_alignEnd="@+id/textView53"
                android:layout_alignRight="@+id/textView53"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_blue_roundcorner_starkwhite"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="12-Dec-2023"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>